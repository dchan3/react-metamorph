env:
  es6: true
  node: true
parser: babel-eslint
extends:
  - plugin:react/recommended
plugins:
  - jsx
  - import
  - react
settings:
  react:
    version: detect
rules:
  react/jsx-key: off
  indent:
    - error
    - 2
  max-len:
    - error
    - 80
    - 2
  object-curly-spacing:
    - error
    - always
  quotes:
    - error
    - single
  no-ternary: off
parserOptions:
  ecmaVersion: 2017
